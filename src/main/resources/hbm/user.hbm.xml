<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.zhuzb.entity.User" table="sys_user">
        <id name="id" column="id">
            <generator class="native"></generator>
        </id>
        <property name="username" column="username"></property>
        <property name="password" column="password"></property>
        <property name="salt" column="salt"></property>
        <property name="locked" column="locked"></property>
        <property name="organizationId" column="organization_id"></property>
        <property name="roleIds" column="role_ids"></property>
        <property name="createTime" column="create_time"></property>
        <property name="updateTime" column="update_time"></property>
        <property name="userImg" column="user_img"></property>
    </class>
</hibernate-mapping>